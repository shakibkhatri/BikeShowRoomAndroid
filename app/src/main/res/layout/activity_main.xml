<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvWel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wel"
        android:textStyle="bold"
        android:textSize="30sp"
        android:background="@color/cardview_shadow_start_color"
        android:textColor="@color/Red"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="20dp"
        android:padding="30dp"/>
    <TextView
        android:id="@+id/tvOverView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/overView"
        android:textStyle="bold"
        android:textSize="30sp"
        android:background="@color/cardview_shadow_start_color"
        android:textColor="@color/Red"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/btnSports"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/sports"
        android:layout_margin="20dp"
        android:padding="10dp"/>

    <ImageButton
        android:id="@+id/btnAdventure"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/adventure"
        android:layout_margin="20dp"
        android:padding="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btnScooty"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/scooty"
            android:layout_margin="20dp"
            android:padding="20dp"/>
        <ImageButton
            android:id="@+id/btnElectric"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/electric"
            android:layout_margin="20dp"
            android:padding="20dp"/>

    </LinearLayout>

</LinearLayout>